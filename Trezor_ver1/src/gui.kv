#:kivy 2.1.0

<ClickableTextFieldRound>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        password: True
        icon_left: "key-variant"

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True


MDScreen:

    MDBoxLayout:
        id: main_box
        orientation: "vertical"
        adaptive_height: True
        adaptive_width: True
        adaptive_size: True 
        spacing: "15dp"
        pos_hint: {"center_x": .5, "center_y": .5}


        MDTextField:
            id: email_field
            hint_text: "E-mail"
            password: False
            icon_left: "card-account-mail-outline"

        ClickableTextFieldRound:
            id: password_field
            size_hint_x: None
            width: "350dp"
            hint_text: "Password"

        MDRectangleFlatButton:
            id: submit_button
            text: "Submit"
            font_size: "18sp"
            theme_text_color: "Custom"
            text_color: "grey"
            line_color: "red"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: app.check_lock()

        MDLabel:
            id: consol_text
            text: "Fill your E-mail and password"
            font_size: "12sp"
            halign: "center"
            name_theme: "Secondary"
            theme_text_color: "Custom"
            text_color: "yellow"